{% extends 'layout.html.twig' %}

{% block title %}Enregistrer un nouvel utilisateur{% endblock %}

{% block body %}

    <h1 class="display-4 mt-5 mb-5" style="text-align: center">Enregistrer un nouvel utilisateur</h1>

    {{ form_start(registrationForm) }}

    <div class="row mt-5">

        <div class="col-sm-5 offset-sm-1">
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.mail) }}
            {{ form_row(registrationForm.site) }}
        </div>

        <div class="col-sm-5">
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.telephone) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 offset-sm-1 mt-4">
            <button class="btn btn-success btn-block">Enregistrer</button>
        </div>
    </div>


    {{ form_end(registrationForm) }}
{% endblock %}
