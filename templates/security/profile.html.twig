{% extends 'layout.html.twig' %}

{% block title %}Profil : {{ user.username }}{% endblock %}

{% block body %}

    <h1 class="display-4 mt-5 mb-5" style="text-align: center">{{user.username}}</h1>

    <div class="row">

        <div class="col-3 offset-1">
            <img class="rounded-circle mt-5" src="{{ asset("img/profil/" ~ user.photo) }}" width="100%">
        </div>

        <div class="col-6">

            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">Nom</span>
                </div>
                <p class="form-control">{{ user.nom }}</p>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Prénom</span>
                </div>
                <p class="form-control">{{ user.prenom }}</p>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Numéro de téléphone</span>
                </div>
                <p class="form-control">{{ user.telephone }}</p>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Adresse mail</span>
                </div>
                <p class="form-control">{{ user.mail }}</p>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Site</span>
                </div>
                <p class="form-control">{{ user.site.libelle }}</p>
            </div>
        </div>

    </div>
{% endblock %}
