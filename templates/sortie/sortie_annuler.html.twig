{% extends 'layout.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}

    <h1 class="display-4 mt-5 mb-5" style="text-align: center">Annuler une sortie</h1>

    <div class="row">
        <div class="col-sm-4 offset-sm-4">
            <p>
                <strong>Nom de la sortie : </strong>{{ sortie.nom }}
            </p>

            <p>
                <strong>Date de la sortie : </strong>{{ sortie.dateDebut |date("d/m/Y H:i") }}
            </p>

            <p>
                <strong>Ville organisatrice : </strong>{{ app.user.site.libelle }}
            </p>

            <p>
                <strong>Lieu
                    : </strong>{{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}
            </p>

            {{ form_start(form_annulerSortie) }}

            <div class="form-group">
                <strong>Description et infos : </strong>
                {{ form_widget(form_annulerSortie.description) }}

            </div>

            {{ form_widget(form_annulerSortie.enregistrer) }}

            {{ form_end(form_annulerSortie) }}


        </div>
    </div>

{% endblock %}
