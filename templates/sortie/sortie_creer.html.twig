{% extends 'layout.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}

    <h1>Créer une sortie</h1>

    {{ form_start(form_CreerSortie) }}
    <div class="row">

        <div class="col">
            Nom de la sortie :
            {{ form_widget(form_CreerSortie.nom) }}
        </div>

        <div class="col">
            Ville organisatrice :
            <label class="form-control"> texte </label>

        </div>

    </div>

    <div class="row">
        <div class="col">
            Date et heure de la sortie :
            {{ form_widget(form_CreerSortie.dateDebut) }}
        </div>

        <div class="col">
            Ville :
            <label class="form-control"> ville </label>

        </div>
    </div>
    <div class="row">
        <div class="col">
            Date limite inscription :
            {{ form_widget(form_CreerSortie.dateCloture) }}
        </div>
        <div class="col">
            Lieu
            {{ form_widget(form_CreerSortie.lieu) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            nombre de places :
            {{ form_widget(form_CreerSortie.nbinscriptionsmax) }}
        </div>
        <div class="col">
            Rue
            <label class="form-control"> Rue </label>
        </div>
    </div>

    <div class="row">
        <div class="col">
            Durée :
            {{ form_widget(form_CreerSortie.duree) }}
        </div>
        <div class="col">
            Code Postal
            <label class="form-control"> code postal valeur </label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            Description et infos :
            {{ form_widget(form_CreerSortie.description) }}
        </div>
        <div class="col">
            Latitude
            <label class="form-control"> Latitude </label>
        </div>

        <div class="col">
            Longitude
            <label class="form-control"> Longitude </label>
        </div>
    </div>












    <div class="row mt-4">
    <div class="col-md-4">
        <button type="submit" class="btn-block btn-primary btn">Enregistrer</button>
    </div><div class="col-md-4">
        <button type="submit" class="btn-block btn-primary btn">Publier la sortie</button>
    </div><div class="col-md-4">
        <button type="submit" class="btn-block btn-primary btn">Annuler</button>
    </div>

    </div>



    {{ form_end(form_CreerSortie) }}
{% endblock %}